{
  "manifest_version": 3,

  "name": "Clip-planet",
  "description": "Web Clipper for Chrome Browser",
  "version": "1.0",

  "action": {
    "default_popup": "popup.html",
    "default_title": "clip-planet"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": ["storage", "https://clip-planet.site/api/sites"],

  "host_permissions": ["<all_urls>"]
}
